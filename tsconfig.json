{
  "compilerOptions": {
    "types": ["jest", "chrome"],

    "esModuleInterop": true,
    "target": "es2017",
    "lib": ["ES2015", "ES2019.Array", "DOM"],
    "module": "commonjs",
    "jsx": "react",
    "jsxFactory": "h",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    // "rootDir": "./srcf",

    /* Advanced Options */
    "forceConsistentCasingInFileNames": true
  }
}
