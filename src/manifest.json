{
  "manifest_version": 2,

  "name": "Whereby picture-in-picture",
  "description": "Show Whereby rooms in picture-in-picture",
  "version": "1.0",

  "permissions": [],

  "page_action": {
    "default_title": "PiP it to the max",
    "default_icon": {
      "48": "./images/48x48.png",
      "16": "./images/16x16.png",
      "32": "./images/32x32.png",
      "36": "./images/36x36.png",
      "72": "./images/72x72.png",
      "96": "./images/96x96.png",
      "144": "./images/144x144.png",
      "192": "./images/192x192.png"
    }
  },

  "icons": {
    "48": "./images/48x48.png",
    "16": "./images/16x16.png",
    "32": "./images/32x32.png",
    "36": "./images/36x36.png",
    "72": "./images/72x72.png",
    "96": "./images/96x96.png",
    "144": "./images/144x144.png",
    "192": "./images/192x192.png"
  },

  "content_scripts": [
    {
      "matches": ["https://*.whereby.com/*"],
      "js": ["./content-script.ts"]
    }
  ]
}
